<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
<style>
    .gallery img {
        height: 100px;
        width: 100px;
    }

    .gallery ul {
        list-style: none;
        margin-top: 40px;
    }

    .gallery li {
        margin-bottom: 30px;
        display: grid;
    }

    .gallery li span{
        font-size:20px;
    }

    #bookmark {
        padding: 5px 10px;
        background-color: #f0ad4e;
        border: 1px solid #eea236;
        border-radius: 4px;
        font-size: 12px;
        color: #fff;
        text-decoration: none;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, .2);
        -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        width:100px;
        margin-top:20px;
        text-align:center;
    }

        #bookmark:hover {
            background-color: #ec971f;
            border: 1px solid #d58512;
            text-decoration: none;
        }
</style>
<div ng-app="myApp" ng-controller="myCtrl">
    <div>
        <input type="text" ng-model="sText" ng-enter="search()">
        <input type="button" ng-click="search()" value="Search">
    </div>
    <div class="gallery">
        <ul>
            <li ng-repeat="item in results">
                <span>
                    {{item.name}}
                </span>
                <img src="{{item.owner.avatar_url}}" />
                <a id="bookmark" ng-click="bookmark(item)" href="#" title="Bookmark" data="{{item}}">Bookmark</a>
            </li>
        </ul>
    </div>

</div>


<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $scope.sText = "";
        $scope.results = [];
        $scope.item = {};

        //search repository by search text
        $scope.search = function () {
            $http.get("https://api.github.com/search/repositories?q=" + $scope.sText)
                .then(function (response) {
                    $scope.results = response.data.items;

                });
        }

        //add reposity to users session
        $scope.bookmark = function (item) {
            var post = $http({
                method: "POST",
                url: "/Home/saveBM",
                dataType: 'json',
                data: { bm: JSON.stringify(item) },
                headers: { "Content-Type": "application/json" }
            });
        }
    });

    //enter click event on users search input
    app.directive('ngEnter', function () {
        return function (scope, element, attrs) {
            element.bind("keydown keypress", function (event) {
                if (event.which === 13) {
                    scope.$apply(function () {
                        scope.$eval(attrs.ngEnter);
                    });

                    event.preventDefault();
                }
            });
        };
    });
</script>